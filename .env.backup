# Yandex Market Bot Configuration - PRODUCTION MODE
# Скопируйте этот файл в .env для использования в продакшене

# Bot settings - ЗАМЕНИТЕ НА СВОИ ДАННЫЕ
BOT_TOKEN=your_production_bot_token_here
CHANNEL_ID=@your_production_channel
ADMIN_ID=your_admin_telegram_id

# Environment - PRODUCTION
ENVIRONMENT=prod
DEBUG_MODE=false

# Database - PRODUCTION
USE_POSTGRES=true
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=ymarket
POSTGRES_USER=bot
POSTGRES_PASSWORD=your_secure_password_here

USE_REDIS=true
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# API settings
USE_OFFICIAL_API=false
YANDEX_OAUTH_TOKEN=your_yandex_oauth_token_here

# Proxy settings - ВАШИ ПРОКСИ (уже настроены)
PROXY_LIST_STR=socks5://TV4GO0:1Z7dhD8iey@109.248.15.182:5501,socks5://TV4GO0:1Z7dhD8iey@109.248.15.188:5501,socks5://TV4GO0:1Z7dhD8iey@109.248.15.207:5501,socks5://TV4GO0:1Z7dhD8iey@109.248.15.209:5501,socks5://TV4GO0:1Z7dhD8iey@109.248.15.220:5501,socks5://TV4GO0:1Z7dhD8iey@109.248.15.223:5501

# Rate limiting - более агрессивное для продакшена
API_RATE_LIMIT=5
API_RATE_WINDOW=60

# Auto search - включено для продакшена
AUTO_SEARCH_ENABLED=true
AUTO_SEARCH_QUERIES=ноутбук,смартфон,наушники,планшет,стиральная машина,холодильник
AUTO_SEARCH_MAX_PER_QUERY=3

# Auto main page - включено для продакшена
AUTO_MAIN_PAGE_ENABLED=true
AUTO_MAIN_PAGE_MAX=5

# Night mode - для продакшена
NIGHT_START=23
NIGHT_END=8

# Quality filters - более строгие для продакшена
QUALITY_MIN_PRICE=500
QUALITY_MIN_DISCOUNT=15
QUALITY_MIN_RATING=4.0
QUALITY_MIN_REVIEWS=100

# Brand limits - для продакшена
BRAND_WINDOW_SIZE=100
BRAND_MAX_PER_WINDOW=2

# Publishing settings - для продакшена
PUBLISH_INTERVAL=120
PUBLISH_BATCH_SIZE=1
POST_INTERVAL=7200  # 2 часа между постами в продакшене

# Logging
LOG_LEVEL=WARNING

# Affiliate settings - ЗАМЕНИТЕ НА СВОИ ДАННЫЕ
AFFILIATE_CLID=your_affiliate_clid_here
AFFILIATE_VID=your_affiliate_vid_here
YANDEX_REF_CLID=your_ref_clid_here
YANDEX_REF_VID=your_ref_vid_here
YANDEX_REF_ERID=your_erid_here

# ChatGPT settings (optional) - ЗАМЕНИТЕ НА СВОИ КЛЮЧИ
CHATGPT_API_KEY=your_chatgpt_key_here
GROQ_API_KEY=your_groq_key_here

# CAPTCHA solving (optional) - ЗАМЕНИТЕ НА СВОЙ КЛЮЧ
CAPTCHA_API_KEY=your_2captcha_key_here
CAPTCHA_SERVICE=rucaptcha

# ==================================================
# ИНСТРУКЦИЯ ПО НАСТРОЙКЕ:
# ==================================================
#
# 1. Скопируйте этот файл в .env:
#    cp env_production_example.txt .env
#
# 2. Замените плейсхолдеры на реальные значения:
#    - BOT_TOKEN: токен вашего Telegram бота
#    - CHANNEL_ID: @username вашего канала
#    - ADMIN_ID: ваш Telegram ID
#    - POSTGRES_PASSWORD: надежный пароль для базы данных
#    - YANDEX_OAUTH_TOKEN: токен от Yandex API (если есть)
#    - AFFILIATE_*: данные от Yandex Affiliate/Distribution
#    - API ключи: от ChatGPT, Groq, 2Captcha (если используете)
#
# 3. Запустите бота:
#    docker-compose up -d
#
# 4. Проверьте логи:
#    docker-compose logs -f bot
